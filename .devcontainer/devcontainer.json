{
  "name": "BitChat Flutter Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    },
    "ghcr.io/devcontainers/features/android-sdk:0": {
      "version": "10406996",
      "buildToolsVersion": "34.0.0",
      "platformVersion": "34",
      "installSystemImages": true,
      "systemImageVersion": "google_apis;x86_64"
    }
  },
  // ★ CHANGE: 環境構築完了後に実行するコマンドを強化
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y unzip libglu1-mesa && git clone https://github.com/flutter/flutter.git -b stable /usr/local/flutter && echo 'no' | /opt/android-sdk/cmdline-tools/latest/bin/avdmanager create avd -n default -k 'system-images;android-34;google_apis;x86_64'",

  // ★ ADD: 環境変数を確実に設定
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/usr/local/flutter/bin:/opt/android-sdk/emulator:/opt/android-sdk/platform-tools"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  },
  "forwardPorts": [
    6080
  ],
  "runArgs": [
    "--privileged"
  ]
}
